<div id="content" class="avalara-cpt-no-sidebar ava-thank-you">
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h1 >{{post.title}}</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h2>{{row.subtitle}}</h2>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <p>{{post.post_content}}</p>
        </div>
    </div>
    <div class="row" style="padding-bottom:45px;">
        <div class="col-md-10 col-sm-12 col-md-offset-2">
            <div style="float: left; margin-right: 30px;">
                <a class="bttn bttn-sm ty-bttn" href="{{row.cta_button_link}}">{{row.cta_button_text}}</a>
            </div>
            <div style="height: 50px;line-height: 50px;">
                <a href="{{row.home_page_link}}">{{row.home_page_link_text}} &gt</a>
            </div>
        </div>
    </div>
    <hr/>
    <div class="row">
        <div class="col-md-8 col-md-offset-2">
            <h4>{{row.whiteboard_text}}</h4>
        </div>
    </div>
    <div class="ty-video">
        <div class="embed-container">
          {{row.whiteboard_video}}
        </div>
        <style>
            .embed-container {
                position: relative;
                padding-bottom: 56.25%;
                height: 0;
                overflow: hidden;
                max-width: 100%;
                height: auto;
            }

            .embed-container iframe,
            .embed-container object,
            .embed-container embed {
                position: absolute;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
            }
        </style>
      </div>
</div>
