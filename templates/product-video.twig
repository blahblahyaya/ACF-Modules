{% if row.acf_fc_layout == 'product_video' %}
  {% if post.post_type == 'video' %}
      <div class="row feature-section">
        <div class="col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
          <h1>{{post.title}}</h1>
        </div>
      </div>
  {% endif %}
  {% if row.video_preview_size == 'small' %}
    <div class="row feature-section" style="text-align: center;">
      <div class="col-md-offset-3 col-md-6 col-sm-12 col-xs-12">
        <h3 style="font-size:24px;font-weight: 400;">{{row.video_title}}</h3>
        {{row.video_description}}
      </div>
    </div>
    <div class="row feature-section" style="text-align: center;padding-bottom:15px;">
      <div class="col-md-offset-4 col-md-4 col-sm-12 col-xs-12">
        <div class="embed-container">
          {{row.video}}
        </div>
      </div>
      <style>
          .embed-container {
            position: relative;
            padding-bottom: 56.25%;
            height: 0;
            overflow: hidden;
            max-width: 100%;
            height: auto;
          }

          .embed-container iframe,
          .embed-container object,
          .embed-container embed {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
          }
        </style>
    </div>
  {% elseif row.video_preview_size == 'large' %}
    <div class="row feature-section" style="text-align: center;padding-bottom:15px;">
      <div class="col-md-offset-2 col-md-8 col-sm-12 col-xs-12">
        <h3>{{row.video_title}}</h3>
        <p>{{row.video_description}}</p>
        <div class="embed-container">
          {{row.video}}
        </div>
        <style>
        	.embed-container {
        		position: relative;
        		padding-bottom: 56.25%;
        		height: 0;
        		overflow: hidden;
        		max-width: 100%;
        		height: auto;
        	}

        	.embed-container iframe,
        	.embed-container object,
        	.embed-container embed {
        		position: absolute;
        		top: 0;
        		left: 0;
        		width: 100%;
        		height: 100%;
        	}
        </style>
      </div>
    </div>
  {% endif %}
{% endif %}
